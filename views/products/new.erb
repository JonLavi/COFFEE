<h1>Add New Product</h1>


<section class="details-box">
  <p>
    <form class="" action="/products" method="post">
      <label for="name">Name:</label>
      <input id="name" type="text" name="name" required="required" >
      <br>

      <label for="producer_select">Select Producer:</label>
      <select name="producer_id" id="producer_select">
        <% @producers.each do |producer| %>
        <option value=<%= producer.id %>><%= producer.name %></option>
        <% end %>
      </select> <a href="producers/new">Add New Producer!</a>
      <br>

      <p>
        <label for="origin_id"> Origin: </label>
        <select name="origin_id" id="origin_select">
          <% @origins.each do |origin| %>
          <option value = '<%=origin.id%>'><%=origin.name%></option>
          <% end %>
        </select>
      </p>

      <p>
        <label for="roast_id"> Roast: </label>
        <select name="roast_id" id="roast_select">
          <% @roasts.each do |roast| %>
          <option value = '<%=roast.id%>'><%=roast.name%></option>
          <% end %>
        </select>
      </p>

      <p>
        <label for="blend_id"> Blend: </label>
        <select name="blend_id" id="blend_select">
          <% @blends.each do |blend| %>
          <option value = '<%=blend.id%>'><%=blend.name%></option>
          <% end %>
        </select>
      </p>

      <p>
        <label for="type_id"> Type: </label>
        <select name="type_id" id="type_select">
          <% @types.each do |type| %>
          <option value = '<%=type.id%>'><%=type.name%></option>
          <% end %>
        </select>
      </p>

      <label for="weight">Weight (g):</label>
      <input id="weight" type="number" min="0" name="weight" >
      <br>
      <label for="unit-cost">Unit Cost: £</label>
      <input id="unit-cost" type="number" min="0" name="unit_cost" required="required" >
      <br>
      <label for="sell-price">Sell Price: £</label>
      <input id="sell-price" type="number" min="0" name="sell_price" required="required" >
      <br>
      <label for="units-in-stock">Units in Stock:</label>
      <input id="units-in-stock" type="number" min="0" name="units_in_stock" required="required">
      <br>
      <label for="optimal-stock">Optimal Stock:</label>
      <input id="optimal-stock" type="number" min="0" name="optimal_stock" required="required">
      <br>
      <input class="btn btn--submit" type="submit" value="Create Product">
    </form>
  </p>
</section>
