<h1>All Stock Items</h1>

<a href="stock_items/new">Add Stock Item</a>

<table>
  <tr>
    <th>Id</th>
    <th>|</th>
    <th>Product Name</th>
    <th>|</th>
    <th>Units in Stock</th>
    <th>|</th>
    <th>Optimal Stock</th>
  </tr>
  <% @stock_items.each do |stock_item| %>
  <tr>
    <td><a href="/stock_items/<%= stock_item.id %>"><%= stock_item.id %></a></td>
    <td>|</td>
    <td><a href="/products/<%= stock_item.product_id %>"><%= stock_item.product_name %></a></td>
    <td>|</td>
    <td><%= stock_item.units_in_stock %></td>
    <td>|</td>
    <td><%= stock_item.optimal_stock %></td>
  </tr>
  <% end %>
</table>
